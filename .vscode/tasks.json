{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and Run (with input/output)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "g++ -std=c++17 \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" && cd \"${fileDirname}\" && \"${fileBasenameNoExtension}.exe\" < input.txt > output.txt"
      ],
      "options": {
        "cwd": "${fileDirname}",
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "silent",
        "showReuseMessage": false,
        "clear": true
      },
      "continueOnError": true
    }
  ]
}
